// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(cuid())
  name         String
  description  String?
  price        Float
  category     String
  imageSrc     String
  stock        Int      @default(0)
  isPublished  Boolean  @default(true)
  shareId      String   @unique @default(cuid())
  ownerId      String?
  owner        User?    @relation(fields: [ownerId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  products     Product[]
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Content {
  id        String   @id @default(cuid())
  key       String   @unique // e.g., 'shipping', 'warranty', 'about'
  title     String
  body      String
  updatedAt DateTime @updatedAt
}
